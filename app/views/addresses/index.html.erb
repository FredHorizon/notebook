<p id="notice"><%= notice %></p>

<div class="row col-xs-12 col-sm-12 col-md-12 col-lg-12"  align="center">

  <h1><%= "#{t('messages.listing')} #{@addresses.model_name.human(count: 2)}" %></h1>

  <table class="table">
    <thead>
      <tr class="active">
        <th><%= @addresses.model.human_attribute_name("street") %></th>
        <th><%= @addresses.model.human_attribute_name("city") %></th>
        <th><%= @addresses.model.human_attribute_name("state") %></th>
        <th><%= @addresses.model.human_attribute_name("contact") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr style="background: <%= cycle('#fff', '#f2f2f2') %>">
          <td><%= address.street %></td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.contact %></td>
          <td><%= link_to t('buttons.show'), address, class: "btn btn-info" %></td>
          <td><%= link_to t('buttons.edit'), edit_address_path(address), class: "btn btn-warning" %></td>
          <td><%= link_to t('buttons.destroy'), address, method: :delete, data: { confirm: t('messages.confirm') }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('buttons.new'), new_address_path, class: "btn btn-primary" %>
  
</div>