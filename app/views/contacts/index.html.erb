<p id="notice"><%= notice %></p>

<h1><%= "#{t('messages.listing')} #{@contacts.model_name.human(count: 2)}" %></h1>

<table class="table table-bordered">
  <thead>
    <tr class="active">
      <th><%= @contacts.model.human_attribute_name("name") %></th>
      <th><%= @contacts.model.human_attribute_name("email") %></th>
      <th><%= @contacts.model.human_attribute_name("kind") %></th>
      <!-- <th><%= Contact.human_attribute_name("rmk") %></th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.kind.description %></td>
        <!-- td><%= contact.rmk %></td> -->
        <td style="border:none" ><%= link_to t('buttons.show'), contact, class: "btn btn-info" %></td>
        <td style="border:none" ><%= link_to t('buttons.edit'), edit_contact_path(contact), class: "btn btn-warning" %></td>
        <td style="border:none"><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('messages.confirm') }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to t('buttons.new'), new_contact_path, class: "btn btn-primary" %>
