<script>
  $.notify("<%= notice %>", "success")
</script>

<div class="row col-xs-12 col-sm-12 col-md-12 col-lg-12"  align="center">

  <h1><%= "#{t('messages.listing')} #{@contacts.model_name.human(count: 2)}" %></h1>

  <table class="table">
    <thead>
      <tr class="active">
        <th><%= @contacts.model.human_attribute_name("name") %></th>
        <th><%= @contacts.model.human_attribute_name("email") %></th>
        <th><%= @contacts.model.human_attribute_name("kind") %></th>
        <!-- <th><%= Contact.human_attribute_name("rmk") %></th> -->
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr style="background: <%= cycle('#fff', '#f2f2f2') %>"> <!-- cycle é um helper que tem a função de alternar cores. -->
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.kind.description %></td>
          <!-- td><%= contact.rmk %></td> -->
          <td><%= link_to t('buttons.edit'), edit_contact_path(contact), class: "btn btn-warning" %></td>
          <td><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('messages.confirm') }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  
  <%= paginate @contacts %>
  <br>
  <%= link_to t('buttons.new'), new_contact_path, class: "btn btn-primary" %>

</div>